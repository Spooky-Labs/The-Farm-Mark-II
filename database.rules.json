{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "agents": {
          "$agentId": {
            ".validate": "newData.hasChildren(['agentId', 'userId', 'timestamp'])"
          }
        },
        "accounts": {
          "$agentId": {
            ".validate": "newData.hasChildren(['accountId', 'agentId', 'userId'])"
          }
        }
      }
    },
    "paperTradingSessions": {
      "$sessionId": {
        ".read": "auth != null && root.child('paperTradingSessions').child($sessionId).child('userId').val() === auth.uid",
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)"
      }
    },
    "leaderboard": {
      ".read": true,
      ".write": false
    }
  }
}