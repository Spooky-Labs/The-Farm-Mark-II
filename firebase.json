{
  "functions": [
    {
      "source": "functions",
      "codebase": "javascript-functions",
      "runtime": "nodejs20",
      "ignore": [
        "node_modules",
        ".git",
        "**/*.log",
        "**/.DS_Store"
      ]
    },
    {
      "source": "python-functions",
      "codebase": "python-functions",
      "runtime": "python312",
      "ignore": [
        "venv",
        ".git",
        "**/*.log",
        "**/.DS_Store",
        "__pycache__"
      ]
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}