# Spooky Labs Trading Platform Environment Configuration
# Copy this file to .env and fill in your values

# Google Cloud Platform Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1
ENVIRONMENT=production

# Alpaca Markets API Configuration
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Firebase Configuration
FIREBASE_PROJECT=your-firebase-project-id

# Monitoring & Alerting
ALERT_EMAIL=alerts@yourdomain.com
ENABLE_MONITORING=true

# Optional: Container Registry
CONTAINER_REGISTRY_HOST=us-central1-docker.pkg.dev

# Optional: Kubernetes Configuration
GKE_CLUSTER=spooky-labs-paper-trading
ENABLE_NETWORK_POLICY=true
ENABLE_WORKLOAD_IDENTITY=true

# Optional: BigQuery Configuration
BIGQUERY_LOCATION=US

# Optional: Storage Configuration
AGENTS_BUCKET=your-project-id-agent-code
BACKTEST_RESULTS_BUCKET=your-project-id-backtest-results

# Optional: Development Settings
DEBUG=false
LOG_LEVEL=info
MAX_FILE_SIZE=1048576